{
    "manifest_version": 2,
    "name": "Reddit Sidebar Toggle Button",
    "short_name": "RSTB",
    "version": "0.4",
    "version_name": "1.3 beta",

    "description": "Enables a more pleasant experience viewing Reddit on a smaller window by toggling the visibility of the sidebar.",
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "64": "64.png",
        "128": "128.png"
    },

    "author": "Andres Salgado",
    "content_scripts": [
        {
            "matches": [
                "*://reddit.com/*",
                "*://*.reddit.com/*"
            ],

            "exclude_matches": [
                "*://api.reddit.com/*"
            ],

            "js": ["script.js"],
            "run_at": "document_end"
        }
    ],

    "permissions": [
        "storage"
    ]
}