{
    "manifest_version": 2,
    "name": "Reddit Sidebar Toggle Button",
    "short_name": "RSTB",
    "version": "0.2",
    "version_name": "1.1 beta",

    "description": "Adds a minimally intrusive button on the page that can toggle the sidebar for a more pleasant experience on a smaller window.",
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "64": "64.png",
        "128": "128.png"
    },

    "author": "Andres Salgado",
    "content_scripts": [
        {
            "matches": [
                "*://reddit.com/*",
                "*://*.reddit.com/*"
            ],

            "js": ["script.min.js"],
            "run_at": "document_end"
        }
    ]
}